<div class="thanks">
    <p>Thank you for signing and supporting the idea of a creative public space!</p>
    <!-- shwo the numbers of signers and link them -->
    <div class="thanks_signature">
        <img src="{{signature}}">
    </div>
    
    <div class="wantseesigners">
        <a href="signers">Want to see all {{number}} people who signed the petition? Click here!</a>
    </div>

    <div class="deletebutton">
        <form method="post">
            <button type="submit">Delete signature</button>
        </form>
    </div>
    
    <div class="error">
        {{error}}
    </div>
    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/script.js"></script>
</div>
    